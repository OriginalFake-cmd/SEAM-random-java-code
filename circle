import java.util.Scanner;
class HelloWorld {
    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);
        while(true) {
           
            
        System.out.println("Enter radius: ");
        
        int rad = scan.nextInt();
        if (rad == 0){
                break;
            }
        final double PI = 3.14;
        printRadius(rad);
        printDiameter(rad);
        printArea(rad);
        printCircumference(rad);
        }
     
    } 
    
    public static void printRadius(int radius){
        System.out.println("The radius is " + radius);
    }
    
        public static void printDiameter(int radius){
            int diameter = radius * 2;
            System.out.println("The diameter is " + diameter);
            
            
        }
        public static void printArea(int radius){
            double area = radius * radius * 3.14;
            System.out.println("The area is " + area);
        }
        public static void printCircumference(int radius){
            double circumference = 3.14 * 2 * radius;
            System.out.println("The circumference is " + circumference);

        } 
     

    
}
